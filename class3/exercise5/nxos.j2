interface Ethernet1/4
    ip address {{ eth1_4_ip_address }}/{{ eth1_4_netmask }}
!
interface loopback101
    ip_address {{ loopback101_ip_address }}/{{ loopback101_netmask }}
!
interface loopback102
    ip_address {{ loopback102_ip_address }}/{{ loopback102_netmask }}
!
feature bgp
router bgp {{ bgp_asn }}
    router-id {{ loopback101_ip_address }}
    address-family ipv4 unicast
{% for advertise_prefix in bgp_advertise %}
        network {{ advertise_prefix }}
{% endfor %}
    neighbor {{ bgp_peer_ip }}
    remote-as {{ bgp_asn }}
    description configured by ansible
    address-family ipv4 unicast
!
